<%- include('partials/header') -%>
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet"/>
  <link rel="stylesheet" href="css/post.css">
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
	const editor = new Quill('#editor',{
		modules: {
			toolbar: [
				[{ header: [1, 2, false] }],
				['bold', 'italic', 'underline'],
				['image', 'code-block']
			]
		},
		theme: 'snow',
	});
	const editorial = new Quill('#editorial',{
		modules: {
			toolbar: [
				[{ header: [1, 2, false] }],
				['bold', 'italic', 'underline'],
				['image', 'code-block']
			]
		},
		theme: 'snow',
	});
	const form = document.querySelector('form');
	form.addEventListener('submit', (e) => {
		e.preventDefault();

		const content = editor.root.innerHTML;

		// Create a hidden input field dynamically and set its value to the editor content
		const inputField = document.createElement('input');
		inputField.type = 'hidden';
		inputField.name = 'editorData';
		inputField.value = content;
		form.appendChild(inputField);

		form.submit();
	});
});
  </script>

<form action="/submit" method="post" class="container form-container sign-in-container">
	<h2>Compose Problem</h2>
	<div class="title">
		<label>Problem Title</label>
		<textarea class="form-control" name="titleInput" cols="100" rows="1" class="composeCon"></textarea>
	</div>
	<br>
	<label >Problem details</label>
	<br><br>
	<div id="editor"></div>
	<br>
	<label >Problem Editorial</label>
	<br><br>
	<div id="editorial"></div>
	<br>
	<button type="submit" class="btn">Publish</button>    
</form>
<%- include('partials/footer') -%>